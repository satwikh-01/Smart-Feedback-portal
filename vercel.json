{
    "version": 2,
    "builds": [
        {
            "src": "client/next.config.ts",
            "use": "@vercel/next"
        },
        {
            "src": "server/app/main.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/app/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "/client"
        }
    ]
}