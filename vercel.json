{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "server/requirements.txt",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/app/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}